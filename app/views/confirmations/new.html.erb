<%= form_with model: @user, class: "ml-3 mr-3", url: confirmations_path do |form| %>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control", required: true %>
  </div>
  <div class="btn btn-info">
    <%= button_tag "Confirm Email", type: :submit, class: "btn btn-info" %>
  </div>
<% end %>