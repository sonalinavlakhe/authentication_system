<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h1 class="text-center">Email Confirmation</h1>
        </div>
        <div class="card-body">
          <%= form_with model: @user, class: "ml-3 mr-3", url: confirmations_path, method: :post do |form| %>
            <div class="form-group">
              <%= form.label :email %>
              <%= form.email_field :email, class: "form-control", required: true, placeholder: (@user&.email || "") %>
            </div>
            <div class="form-group">
              <%= button_tag "Confirm Email", type: :submit, class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>