<h2>Login</h2>

<%=form_with scope: :user, class: "ml-3 mr-3", url: login_path  do |form|%>
  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control", required: true %>
  </div>
  <div class= "form-group">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control", required: true %>
  </div>
  <%= button_tag "Login", type: :submit, class: "btn btn-info"%>
<% end %>