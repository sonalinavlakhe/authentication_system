<h1>Enter verification code</h1>

<%= form_with class: "ml-3 mr-3", url: phone_verifications_path, local: true, model: @user do |form| %>
  <div class="form-group">
    <%= form.label :code, "Verification code:" %>
    <%= form.text_field :code,class: "form-control", required: true %>
  </div>
  <%= button_tag "Verify Code", type: :submit, class: "btn btn-info"  %>
<% end %>